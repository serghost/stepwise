<script>
function copyInvite(id) {
  const input = document.getElementById('invite-' + id);
  input.select();
  navigator.clipboard.writeText(input.value).then(() => {
    const btn = input.nextElementSibling;
    btn.textContent = '‚úì';
    setTimeout(() => btn.textContent = 'üìã', 1500);
  });
}
</script>
